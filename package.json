{
  "name": "node-ts-template",
  "version": "1.0.0",
  "main": "main.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prettier": "prettier --check src",
    "prettier:fix": "prettier --write src",
    "lint": "eslint src",
    "prepare": "husky"
  },
  "author": "Matheus Pereira",
  "license": "ISC",
  "description": "Template project for Node.js with TypeScript",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.3"
  }
}
